{
    "name": "chromesoul",
    "version": "0.1.1",
    "manifest_version": 2,
    "description": "A minimalist NetSoul client.",
    "options_page": "options.html",
    "app": {
	"background": {
	    "scripts": ["third-party/md5-min.js",
			"third-party/ab-str.js",
			"lib/ns_client.js",
			"background.js"
		       ]
	}
    },
    "permissions": [
	"background",
	"storage",
	{"socket": ["tcp-connect:ns-server.epita.fr:4242"]}
    ]
}
